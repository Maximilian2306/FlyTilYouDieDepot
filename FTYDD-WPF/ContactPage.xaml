<Page x:Class="FTYDD_WPF.ContactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FTYDD_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="ContactPage">


  



    <Grid>
        <Canvas>
            <TextBlock Width="250" FontSize="50" FontWeight="Bold" Canvas.Left="70" Canvas.Top="90" >Über uns...</TextBlock>

            <TextBlock Width="950" FontSize="50" FontWeight="Bold" Canvas.Right="80" Canvas.Top="90" >eine Geschichte die Sie abheben lässt.</TextBlock>

            <TextBlock Width="200" FontSize="30" >Herkunft</TextBlock>

            <TextBlock Width="400" FontSize="30" >Kolbermoor/Deutschland</TextBlock>

            <TextBlock Width="200" Height="60" FontSize="30" >Historie</TextBlock>

            <TextBlock TextWrapping="Wrap" Width="900" Margin="104,40,146,0" FontSize="25"  >In den frühen 2000er Jahren gründete der leidenschaftliche
            Pilot Max FlyTilYouDieDepot mit dem Ziel, einen transparenten und benutzerfreundlichen Marktplatz für Flugzeugverkäufe zu schaffen. Frustriert von den
            komplizierten und intransparenten Prozessen bei herkömmlichen Vertriebswegen, wollte er die Möglichkeit schaffen, hochwertige Flugzeuge schnell und einfach
            zu finden und zu erwerben. Der Name des Unternehmens, "FlyTilYouDieDepot", spiegelt seine Leidenschaft für das Fliegen und die unbegrenzten Möglichkeiten, die
            es bietet, wider. Heute ist FlyTilYouDieDepot ein führender Online-Marktplatz in der Luftfahrtbranche und steht weiterhin für Innovation, Qualität und die
            unerschütterliche Leidenschaft für das Fliegen.</TextBlock>

            <Image Width="110" Height="110" Grid.Row="2" Grid.Column="0" Margin="189,190,51,150" Source="/Images/Top-Arbeitgeber-1.jpg"/>
            <Image Width="110" Height="110" Grid.Row="2" Grid.Column="0" Margin="50,190,190,150" Source="/Images/wfk-Siegel-3000.jpg"/>


            <Button x:Name="Back_button" Width="75" Height="30" Margin="25" Background="DimGray" BorderBrush="Black" Foreground="White" Grid.Row="2"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="18" Content="Back">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Blue"/>
                        <Setter Property="Foreground" Value="White"/>

                        <Style.Triggers>
                            <EventTrigger RoutedEvent="Button.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                     Storyboard.TargetProperty="Width"
                     To="85"
                     Duration="0:0:0.2"/>
                                        <DoubleAnimation
                     Storyboard.TargetProperty="Height"
                     To="35"
                     Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Button.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                     Storyboard.TargetProperty="Width"
                     To="75"
                     Duration="0:0:0.2"/>
                                        <DoubleAnimation
                     Storyboard.TargetProperty="Height"
                     To="30"
                     Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="GoBack_button" Content="  > " Click="GoBack_button_Click" Cursor="Hand" FontSize="30" Background="Transparent" Foreground="White" 
                BorderBrush="Transparent" BorderThickness="0" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <Expander x:Name="expander" Margin="0,0,20,0" Canvas.Top="700" Cursor="Hand" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Canvas>
                    <Button x:Name="ueber_uns" Click="ueber_uns_Click" Canvas.Top="0" Canvas.Right="20" Background="Transparent" Width="60" Height="20" BorderBrush="Transparent" Content="Über uns" Foreground="White"></Button>
                    <Button x:Name="home" Click="home_Click" Canvas.Right="20" Canvas.Top="20" Background="Transparent" Width="60" Height="20" BorderBrush="Transparent" Content="Home" Foreground="White"></Button>
                    <Button x:Name="info" Click="info_Click" Canvas.Right="20" Canvas.Top="40" Background="Transparent" Width="60" Height="20" BorderBrush="Transparent" Content="Info" Foreground="White"></Button>
                    <Button x:Name="uebersicht" Click="uebersicht_Click" Canvas.Right="20" Canvas.Top="60" Background="Transparent" Width="60" Height="20" BorderBrush="Transparent" Content="Übersicht" Foreground="White"></Button>
                    <Button x:Name="warenkorb" Click="warenkorb_Click" Canvas.Right="20" Canvas.Top="80" Background="Transparent" Width="65" Height="20" BorderBrush="Transparent" Content="Warenkorb" Foreground="White"></Button>
                </Canvas>
            </Expander>




        </Canvas>
       <!-- <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>-->


       

    </Grid>
    <Page.Background>
        <ImageBrush ImageSource="/Images/Hintergrund_1.jpg"/>
    </Page.Background>

</Page>
