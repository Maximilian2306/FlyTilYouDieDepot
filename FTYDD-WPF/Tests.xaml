<Page x:Class="FTYDD_WPF.Tests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FTYDD_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tests">

    <Grid>

        <StackPanel Margin="20">
            <Label Foreground="Red" Background="Gray">Hallo Welt!</Label>
            <Label>
                <Image Width="300" Height="200" Source="/Images/PrivateJets_Hintergrund.jpg"></Image>
            </Label>
            
            <Label Foreground="Black">Vorname:</Label>
            <TextBox x:Name="txtBox_vorname"/>
            
            <Label Foreground="Black">Nachname:</Label>
            <TextBox x:Name="txtBox_nachname"/>

            <Button Click="Button_Click_1" Margin="10" Cursor="Hand" >Akzeptieren</Button>
            <Label x:Name="lbl_message"/>
        </StackPanel>

     


        <StackPanel>
            <Button x:Name="Button1" Click="Button_Click" Margin="10" Height="35" Width="100">Klick mich!</Button>
            <Button HorizontalAlignment="Center">Button2</Button>
            <Button HorizontalAlignment="Right">Button3</Button>
        </StackPanel>





    </Grid>

</Page>
