<Page x:Class="FTYDD_WPF.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FTYDD_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1500"
      Title="MainPage">


    <Grid>
        <ScrollViewer CanContentScroll="True">
            <Canvas Width="1500" Height="750" >


                <Label Background="CornflowerBlue" Width="500" Height="150" Canvas.Left="-50" Canvas.Top="20" Canvas.Right="-50" ></Label>
                <Label Background="CornflowerBlue" Width="500" Height="90" Canvas.Left="1200" Canvas.Top="20" Canvas.Right="-50" ></Label>
                

                <Label x:Name="HomePageLabel" Content="FlyTilYouDieDepot" FontSize="40" FontWeight="Bold" Foreground="White" Background="Black" 
                       BorderBrush="OldLace" BorderThickness="5" Padding="20" Canvas.Top="42" Canvas.Left="10" MouseEnter="HomePageLabel_MouseEnter">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="Background" Value="Aqua"></Setter>

                            <Style.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="FontSize" To="43" 
                                                             Duration="0:0:0.2"></DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="FontSize" To="40"
                                                             Duration="0:0:0.2"></DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
                
                <!-- ComboBox zur Auswahl der verschiedenen Flugzeuge -->
                <ComboBox x:Name="combobox_1" SelectedIndex="0" SelectionChanged="combobox_1_SelectionChanged" Canvas.Top="200" Canvas.Left="20" 
                          Width="250" Height="30" FontSize="17" Cursor="Hand" FontWeight="DemiBold"  HorizontalAlignment="Left" >
                    <ComboBoxItem Foreground="LightGray" Content="Layout" Cursor="Hand"/>
                    <ComboBoxItem Content="Übersicht" Cursor="Hand" />
                    <ComboBoxItem Content="Boeing 737" Cursor="Hand" />
                    <ComboBoxItem Content="Gulfstream G700" Cursor="Hand"/>
                    <ComboBoxItem Content="Lockheed Martin F-35" Cursor="Hand"/>
                </ComboBox>

                <Label Content="Suchen..." Canvas.Right="200" Canvas.Top="30"  FontSize="20" FontWeight="UltraLight"></Label>
                
                <TextBox x:Name="Search_txtbox" Cursor="Hand" Background="Black" Foreground="White" FontSize="18" Canvas.Right="30" Canvas.Top="68" Height="30" Width="250" VerticalAlignment="Top" HorizontalAlignment="Right" ></TextBox>
                
                <TextBlock x:Name="ActualTime" Canvas.Right="680" Canvas.Top="20" FontSize="14" FontWeight="Bold" Background="SlateGray" HorizontalAlignment="Left" VerticalAlignment="Bottom"></TextBlock>
                
                <ListBox x:Name="list_box" Height="40" Width="150" Canvas.Left="20" Canvas.Top="260"></ListBox>
                
                <Label Height="140" Width="1300" HorizontalAlignment="Center" Canvas.Left="100" Canvas.Bottom="-20" Background="Black" BorderBrush="White" BorderThickness="2"></Label>
                
                <Button x:Name="ÜberUns_button" Click="ÜberUns_button_Click" Content="Über uns..." Width="72" Height="25" FontSize="15" BorderBrush="Black" BorderThickness="0" Background="Black" Foreground="White" Canvas.Bottom="20" Canvas.Left="200"></Button>
                <Button x:Name="Info" Click="Info_Click" Content="Info" Width="72" Height="25" FontSize="15" BorderBrush="Black" BorderThickness="0" Background="Black" Foreground="White" Canvas.Bottom="70" Canvas.Left="200"></Button>
                <Button x:Name="logIn" Click="logIn_Click" Content="Log In" Width="72" Height="25" FontSize="15" BorderBrush="Black" BorderThickness="0" Background="Black" Foreground="White" Canvas.Bottom="20" Canvas.Left="400"></Button>
                <Button x:Name="facebook" Click="facebook_Click" Content="Facebook" Width="72" Height="25" FontSize="15" BorderBrush="Black" BorderThickness="0" Background="Black" Foreground="White" Canvas.Bottom="70" Canvas.Left="400"></Button>
                <Button x:Name="youtube" Click="youtube_Click" Content="Youtube" Width="72" Height="25" FontSize="15" BorderBrush="Black" BorderThickness="0" Background="Black" Foreground="White" Canvas.Bottom="20" Canvas.Left="600"></Button>
                <Button x:Name="wiki" Click="wiki_Click" Content="Wikipedia" Width="72" Height="25" FontSize="15" BorderBrush="Black" BorderThickness="0" Background="Black" Foreground="White" Canvas.Bottom="70" Canvas.Left="600"></Button>




                <Expander x:Name="expander" Canvas.Right="20" Canvas.Top="350" Cursor="Hand" >
                    <Canvas>
                        <Button x:Name="ueber_uns" Click="ueber_uns_Click" Canvas.Top="0" Canvas.Right="20" Background="Transparent" Width="60" Height="20" BorderBrush="Transparent" Content="Über uns" Foreground="White"></Button>
                        <Button x:Name="home" Click="home_Click" Canvas.Right="20" Canvas.Top="20" Background="Transparent" Width="60" Height="20" BorderBrush="Transparent" Content="Home" Foreground="White"></Button>
                        <Button x:Name="info" Click="info_Click" Canvas.Right="20" Canvas.Top="40" Background="Transparent" Width="60" Height="20" BorderBrush="Transparent" Content="Info" Foreground="White"></Button>
                        <Button x:Name="uebersicht" Click="uebersicht_Click" Canvas.Right="20" Canvas.Top="60" Background="Transparent" Width="60" Height="20" BorderBrush="Transparent" Content="Übersicht" Foreground="White"></Button>
                        <Button x:Name="warenkorb" Click="warenkorb_Click" Canvas.Right="20" Canvas.Top="80" Background="Transparent" Width="65" Height="20" BorderBrush="Transparent" Content="Warenkorb" Foreground="White"></Button>
                    </Canvas>
                </Expander>










            </Canvas>
        </ScrollViewer>
    </Grid>

    <Page.Background>
        <ImageBrush ImageSource="/Images/Hintergrund_3.png"/>
    </Page.Background>
</Page>
