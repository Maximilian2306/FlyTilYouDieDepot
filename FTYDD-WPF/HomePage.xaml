<Page x:Class="FTYDD_WPF.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FTYDD_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Page.Resources>
        <Style TargetType="Label" x:Key="OutlinedLabel">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border BorderBrush="Black" BorderThickness="1" Background="Black">
                            <ContentPresenter Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>

        <Frame x:Name="MainFrame"/>


        <Image Source="/Images/Eclipse Aviation Eclipse 550.jpg" Stretch="UniformToFill"></Image>

        <Border BorderBrush="Black" BorderThickness="5"></Border>

        <Label Name="label1" Style="{StaticResource OutlinedLabel}"
            Foreground="White" Background="Black" Padding="5" 
            FontSize="20" Height="40" Width="200" Margin="14,23,0,0" 
            VerticalAlignment="Top" HorizontalAlignment="Left">FlyTilYouDieDepot</Label>


        <Button Click="Button0_Click" Name="Button0" Height="23" Width="75" Margin="14,86,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">Button</Button>


        <ComboBox Width = "120" Margin = "14,125,0,114" 
               HorizontalAlignment = "Left" VerticalAlignment = "Top" 
               SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem>Großflugzeuge</ComboBoxItem>
            <ComboBoxItem>Mittel/Kleinflugzeuge</ComboBoxItem>
            <ComboBoxItem>Privatjets</ComboBoxItem>
            <ComboBoxItem>Waffen</ComboBoxItem>

        </ComboBox>


    </Grid>
</Page>
