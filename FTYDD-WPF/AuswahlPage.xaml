<Page x:Class="FTYDD_WPF.AuswahlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FTYDD_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="2000" d:DesignWidth="1500"
      Title="AuswahlPage">

    <Page.Background>
        <ImageBrush ImageSource="/Images/Hintergrund_4.jpg"/>
    </Page.Background>
    
    <Grid>
        <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto">
            <Canvas Height="2000" Width="1500">
                
                
                
                
                <Label BorderBrush="Black" BorderThickness="10" Canvas.Left="60" Canvas.Top="450" >
                    <Image Source="/Images/Boeing_737.png" Stretch="UniformToFill" Height="200" Width="350"/>
                </Label>

                <Label BorderBrush="Black" BorderThickness="10" Canvas.Left="555" Canvas.Top="450" >
                    <Image Source="/Images/Gulfstream_G700.jpg" Stretch="UniformToFill" Height="200" Width="350"/>
                </Label>

                <Label BorderBrush="Black" BorderThickness="10" Canvas.Right="60" Canvas.Top="450">
                    <Image Source="/Images/Lockheed_Martin_F-35_Lightning.jpg" Stretch="UniformToFill" Height="200" Width="350"/>
                </Label>

                <TextBlock x:Name="txtbox_boeing" FontSize="30" Foreground="White" FontWeight="Normal" TextWrapping="Wrap" 
                           Opacity="30" Canvas.Left="170" Canvas.Top="680">Boeing 737 <LineBreak></LineBreak>-83.137.500€</TextBlock>

                <TextBlock x:Name="txtbox_golfstream" FontSize="30" Foreground="White" FontWeight="Normal" TextWrapping="Wrap" 
           Opacity="30" Canvas.Left="650" Canvas.Top="680">Golfstream G700 <LineBreak></LineBreak>-70.137.500€</TextBlock>

                <TextBlock x:Name="txtbox_f35" FontSize="30" Foreground="White" FontWeight="Normal" TextWrapping="Wrap" 
           Opacity="30" Canvas.Right="110" Canvas.Top="680">Lockheed Martin F-35 <LineBreak></LineBreak>-74.137.500€</TextBlock>








                <Expander x:Name="expander" Canvas.Right="50" Canvas.Top="900" Cursor="Hand" >
                    <Canvas>
                        <Button x:Name="ueber_uns" Click="ueber_uns_Click" Canvas.Top="0" Canvas.Right="20" Background="Transparent" Width="60" Height="20" BorderBrush="Transparent" Content="Über uns" Foreground="White"></Button>
                        <Button x:Name="home" Click="home_Click" Canvas.Right="20" Canvas.Top="20" Background="Transparent" Width="60" Height="20" BorderBrush="Transparent" Content="Home" Foreground="White"></Button>
                        <Button x:Name="info" Click="info_Click" Canvas.Right="20" Canvas.Top="40" Background="Transparent" Width="60" Height="20" BorderBrush="Transparent" Content="Info" Foreground="White"></Button>
                        <Button x:Name="uebersicht" Click="uebersicht_Click" Canvas.Right="20" Canvas.Top="60" Background="Transparent" Width="60" Height="20" BorderBrush="Transparent" Content="Übersicht" Foreground="White"></Button>
                        <Button x:Name="warenkorb" Click="warenkorb_Click" Canvas.Right="20" Canvas.Top="80" Background="Transparent" Width="65" Height="20" BorderBrush="Transparent" Content="Warenkorb" Foreground="White"></Button>
                    </Canvas>
                </Expander>

                
                
                <Label Background="DarkSlateGray" Canvas.Left="100" Canvas.Top="320" Canvas.Right="150" Height="40" Width="600"></Label>
                <Slider x:Name="slider_price"  Width="400" Height="80" Foreground="Black" Canvas.Left="150" 
                        Canvas.Top="330" Canvas.Right="300"/>


                <!-- Hintergrund für das Neonlicht -->
                <Rectangle Fill="#000" Opacity="0.6"/>

                <!-- Neonlicht-Effekt -->
                <TextBlock Text="Unsere Garage" 
               FontSize="100" 
               FontWeight="Bold" 
               Foreground="#00FF00"
               Canvas.Left="383" Canvas.Top="90">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00FF00" ShadowDepth="0" BlurRadius="10"/>
                    </TextBlock.Effect>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation From="1" To="0.3" Duration="0:0:1" AutoReverse="True" RepeatBehavior="Forever" Storyboard.TargetProperty="Opacity"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>




                <StackPanel Canvas.Top="850" Canvas.Left="200" Orientation="Horizontal" Margin="10">
                    <TextBox x:Name="NameTextBox" Width="100" Margin="5" />
                    <TextBox x:Name="HeightTextBox" Width="50" Margin="5" />
                    <TextBox x:Name="WidthTextBox" Width="50" Margin="5"/>
                    <TextBox x:Name="LengthTextBox" Width="50" Margin="5" />
                    <TextBox x:Name="PriceTextBox" Width="100" Margin="5" />
                    <TextBox x:Name="ColourTextBox" Width="100" Margin="5" />
                    <TextBox x:Name="DigitalDataTextBox" Width="100" Margin="5" />
                    <Button x:Name="Add_Button" Content="Add Plane" Click="Add_Button_Click" Width="100" Margin="5"/>

                </StackPanel>

