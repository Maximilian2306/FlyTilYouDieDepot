                <ListView x:Name="PlanesListView" MouseDoubleClick="PlanesListView_MouseDoubleClick" Canvas.Left="35" Canvas.Top="900" Margin="10" Background="Transparent" BorderBrush="Transparent">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="3" Columns="3"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Width="450" Margin="5" Background="Transparent" >
                                <Image Source="{Binding ImagePath}" Width="300" Height="250" Margin="5"/>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="25" Foreground="White" TextAlignment="Center" />
                                <TextBlock Text="{Binding Price, StringFormat={}{0:C}}" FontSize="20" Foreground="White" TextAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Canvas>
        </ScrollViewer>
        
    </Grid>
</Page>
