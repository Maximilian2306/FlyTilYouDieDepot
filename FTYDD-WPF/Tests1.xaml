<Page x:Class="FTYDD_WPF.Tests1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FTYDD_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tests1">

    <Grid>

        <StackPanel Margin="20" >
            <Label>Wähle ein Abo-Modell:</Label>
            <RadioButton x:Name="bronze_abo" IsChecked="True" GroupName="Abo" Cursor="Hand" >Bronze Abo</RadioButton>
            <RadioButton x:Name="silber_abo" GroupName="Abo" Cursor="Hand" >Silber Abo</RadioButton>
            <RadioButton x:Name="gold_abo" GroupName="Abo" Cursor="Hand" >Gold Abo</RadioButton>

            <Label>Dein Geschlecht:</Label>
            <RadioButton x:Name="mann_rb" GroupName="Geschlecht" Cursor="Hand" >Mann</RadioButton>
            <RadioButton x:Name="frau_rb" GroupName="Geschlecht" Cursor="Hand" >Frau</RadioButton>

            <Button Click="Button_Click" Margin="20" Cursor="Hand" >Bestätige</Button>
            <Label x:Name="lbl_abo"/>
            <Label x:Name="lbl_geschlecht"/>

        </StackPanel>
        
        
        
    </Grid>
</Page>
